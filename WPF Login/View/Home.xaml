<Window x:Class="WPF_Login.View.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Login.View"
        mc:Ignorable="d"
        Title="Home" Height="400" Width="400" Background="Yellow" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="40">
            <Image Source="/Assets/0metrodata.png" Width="96"></Image>
            <Border Background="White" Margin="10 20" CornerRadius="5">
                <StackPanel Margin="25">
                    <TextBlock Name="WelcomeMessage" Margin="15 0 15 0" OpacityMask="Crimson" Foreground="Black" TextAlignment="Center"/>
                    <Button Margin="15 20" Content="Update_Data" Name="Update_Data" Click="Update_Data_Click"/>
                    <Button Margin="15 20" Content="Logout" Name="Logout" Click="Logout_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
